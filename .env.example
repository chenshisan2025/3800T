# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database
DATABASE_URL=your_database_connection_string
DIRECT_URL=your_direct_database_connection_string

# API Configuration
API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Stock Data API (示例配置)
STOCK_API_KEY=your_stock_data_api_key
STOCK_API_BASE_URL=https://api.example.com

# Redis (可选，用于缓存)
REDIS_URL=redis://localhost:6379

# Email Service (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# File Upload (可选)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Environment
NODE_ENV=development
PORT=3001
NEXT_PUBLIC_APP_ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# WeChat Mini Program (微信小程序配置)
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_API_TIMEOUT=30000

# Analytics (可选)
GOOGLE_ANALYTICS_ID=your_ga_id
BAIDU_ANALYTICS_ID=your_baidu_analytics_id

# Push Notifications (可选)
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id

# Third-party Services
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_secret_key
ALIYUN_OSS_BUCKET=your_oss_bucket_name
ALIYUN_OSS_REGION=your_oss_region