/* pages/upgrade/upgrade.wxss */
.upgrade-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: white;
}

.loading-text {
  font-size: 32rpx;
}

/* 套餐容器 */
.plans-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 套餐卡片 */
.plan-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.plan-card.selected {
  border-color: #667eea;
  transform: scale(1.02);
}

.plan-card.current {
  border-color: #52c41a;
}

.plan-card.pro {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  color: #2d3436;
}

/* 套餐头部 */
.plan-header {
  text-align: center;
  margin-bottom: 32rpx;
  position: relative;
}

.plan-badge {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  background: #ff6b6b;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.plan-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.plan-price {
  font-size: 56rpx;
  font-weight: bold;
  color: #667eea;
}

.plan-card.pro .plan-price {
  color: #e17055;
}

.price-unit {
  font-size: 28rpx;
  font-weight: normal;
  opacity: 0.7;
}

.current-badge {
  display: inline-block;
  background: #52c41a;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-top: 16rpx;
}

/* 功能列表 */
.plan-features {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 8rpx 0;
}

.feature-item.disabled {
  opacity: 0.5;
}

.feature-icon {
  width: 32rpx;
  text-align: center;
  font-weight: bold;
}

.feature-item:not(.disabled) .feature-icon {
  color: #52c41a;
}

.feature-item.disabled .feature-icon {
  color: #ff4d4f;
}

.feature-text {
  font-size: 28rpx;
  flex: 1;
}

/* 操作按钮 */
.actions {
  margin: 40rpx 0;
}

.upgrade-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 24rpx;
}

.upgrade-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.upgrade-btn.disabled {
  background: #f5f5f5;
  color: #999;
}

.secondary-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
}

.link {
  color: white;
  font-size: 28rpx;
  text-decoration: underline;
}

.divider {
  color: white;
  opacity: 0.5;
}

/* FAQ部分 */
.faq-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 40rpx 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
  color: #2d3436;
}

.faq-item {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.faq-question {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d3436;
  margin-bottom: 16rpx;
}

.faq-answer {
  font-size: 28rpx;
  color: #636e72;
  line-height: 1.6;
}

/* 底部说明 */
.footer {
  padding: 40rpx 0;
  text-align: center;
}

.footer-text {
  color: white;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .upgrade-container {
    padding: 16rpx;
  }
  
  .plan-card {
    padding: 24rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .plan-price {
    font-size: 48rpx;
  }
}