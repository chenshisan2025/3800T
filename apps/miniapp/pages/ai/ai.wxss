/* pages/ai/ai.wxss */
.container {
  padding: 0 0 200rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 20rpx 20rpx;
  background-color: #fff;
}

/* 分析类型选择 */
.analysis-types {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.type-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx 30rpx;
}

.type-item {
  width: calc(50% - 10rpx);
  margin: 0 5rpx 20rpx;
  padding: 30rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-item:active {
  background-color: #e9ecef;
  border-color: #2166A5;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.type-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.type-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 消息列表 */
.message-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.message-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.message-item:last-child {
  border-bottom: none;
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.message-info {
  flex: 1;
}

.message-sender {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.message-time {
  font-size: 22rpx;
  color: #999;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-line;
  padding-left: 80rpx;
}

.message-item.user .message-avatar {
  background-color: #2166A5;
  color: #fff;
}

.message-item.ai .message-avatar {
  background-color: #4ecdc4;
  color: #fff;
}

.message-item.system .message-avatar {
  background-color: #f9ca24;
  color: #fff;
}

/* 分析中状态 */
.analyzing {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  color: #666;
}

.analyzing-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.analyzing-text {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.analyzing-dots {
  display: flex;
  align-items: center;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #2166A5;
  margin: 0 4rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 输入框 */
.input-area {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx;
  z-index: 999;
}

.input-wrapper {
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #ccc;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.send-btn.active {
  background-color: #2166A5;
}

.send-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

