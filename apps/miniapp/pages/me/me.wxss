/* pages/me/me.wxss */
.container {
  padding: 0 0 120rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #999;
}

.user-details {
  flex: 1;
  position: relative;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.login-prompt {
  font-size: 36rpx;
  font-weight: bold;
  color: #2166A5;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  color: #666;
}

.pro-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}

.subscription-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9ff 0%, #fff5f5 100%);
}

.subscription-info {
  flex: 1;
}

.plan-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.plan-desc {
  font-size: 24rpx;
  color: #666;
}

.upgrade-btn-mini {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.logout-btn {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ff4444;
  border-top: 1rpx solid #f0f0f0;
}

.logout-btn:active {
  background-color: #f8f8f8;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 20rpx;
  font-size: 24rpx;
  color: #999;
}

