/* pages/watchlist/watchlist.wxss */
.watchlist-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部栏 */
.header-bar {
  background-color: #2166A5;
  color: white;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-actions {
  display: flex;
  align-items: center;
}

.edit-actions {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  font-size: 28rpx;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  justify-content: center;
  align-items: center;
  height: calc(100vh - 200rpx);
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.login-btn {
  background-color: #2166A5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 30rpx;
}

/* 主要内容 */
.content {
  height: calc(100vh - 120rpx - env(safe-area-inset-top));
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 空状态 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.add-btn {
  background-color: #2166A5;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 30rpx;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}

.sort-item:first-child {
  text-align: left;
  padding-left: 30rpx;
}

.sort-item:last-child {
  text-align: right;
  padding-right: 30rpx;
}

.sort-text {
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
}

/* 股票列表 */
.stock-scroll {
  flex: 1;
  background-color: white;
}

.stock-list {
  padding: 0 30rpx;
}

.stock-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  transition: all 0.3s ease;
}

.stock-item:last-child {
  border-bottom: none;
}

.stock-item.edit-mode {
  padding-left: 60rpx;
}

.stock-item.selected {
  background-color: #f0f8ff;
}

/* 选择框 */
.select-box {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  background-color: white;
  position: relative;
}

.checkbox.checked {
  background-color: #2166A5;
  border-color: #2166A5;
}

.checkbox.checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

/* 股票信息 */
.stock-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.stock-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stock-code {
  font-size: 22rpx;
  color: #999;
}

/* 价格信息 */
.stock-price {
  flex: 0 0 120rpx;
  text-align: center;
}

.price-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 涨跌信息 */
.stock-change {
  flex: 0 0 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.change-percent {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.change-value {
  font-size: 22rpx;
}

/* 时间信息 */
.stock-time {
  flex: 0 0 100rpx;
  text-align: center;
}

.time-value {
  font-size: 22rpx;
  color: #999;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff4444;
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.stock-item:hover .delete-btn,
.stock-item:active .delete-btn {
  opacity: 1;
}

.delete-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 底部操作栏 */
.bottom-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.selected-info {
  flex: 1;
}

.selected-text {
  font-size: 28rpx;
  color: #666;
}

.delete-btn-bottom {
  background-color: #ff4444;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.delete-btn-bottom[disabled] {
  background-color: #ccc;
  color: #999;
}

/* 浮动添加按钮 */
.add-float-btn {
  position: fixed;
  right: 30rpx;
  bottom: calc(30rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background-color: #2166A5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(33, 102, 165, 0.3);
  z-index: 100;
}

.add-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

/* 股票涨跌颜色 */
.stock-up {
  color: #FF4444;
}

.stock-down {
  color: #00C851;
}

.stock-flat {
  color: #666;
}