<!-- components/compliance/disclaimer.wxml -->
<view 
  class="disclaimer {{position === 'bottom' ? 'disclaimer-bottom' : ''}} {{position === 'top' ? 'disclaimer-top' : ''}} {{theme}} {{customClass}}"
  wx:if="{{shouldShow && config && !loading}}"
>
  <view class="disclaimer-content">
    <!-- 图标 -->
    <view class="disclaimer-icon" wx:if="{{showIcon}}">
      <view class="icon-wrapper">
        <text class="icon-text">!</text>
      </view>
    </view>
    
    <!-- 主要内容 -->
    <view class="disclaimer-main">
      <!-- 标题 -->
      <view class="disclaimer-title" wx:if="{{config.title}}">
        {{config.title}}
      </view>
      
      <!-- 内容 -->
      <view class="disclaimer-text" wx:if="{{config.content}}">
        {{config.content}}
      </view>
      
      <!-- 链接 -->
      <view 
        class="disclaimer-link" 
        wx:if="{{config.linkText && config.linkUrl}}"
        bindtap="handleLinkTap"
      >
        {{config.linkText}}
      </view>
    </view>
    
    <!-- 关闭按钮 -->
    <view class="disclaimer-close" wx:if="{{closable}}" bindtap="handleClose">
      <text class="close-icon">×</text>
    </view>
  </view>
  
  <!-- 加载状态 -->
  <view class="disclaimer-loading" wx:if="{{loading}}">
    <text class="loading-text">加载中...</text>
  </view>
</view>