/* components/compliance/disclaimer.wxss */
.disclaimer {
  width: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 1.4;
  z-index: 1000;
}

/* 位置样式 */
.disclaimer-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #e8e8e8;
}

.disclaimer-top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  border-bottom: 1rpx solid #e8e8e8;
}

/* 主题样式 */
.disclaimer.light {
  background-color: #f8f9fa;
  color: #666;
}

.disclaimer.dark {
  background-color: #2c2c2c;
  color: #ccc;
}

.disclaimer.transparent {
  background-color: rgba(248, 249, 250, 0.95);
  color: #666;
  backdrop-filter: blur(10rpx);
}

/* 内容容器 */
.disclaimer-content {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 24rpx;
  min-height: 80rpx;
}

/* 图标样式 */
.disclaimer-icon {
  flex-shrink: 0;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.icon-wrapper {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #ff9500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.disclaimer.dark .icon-wrapper {
  background-color: #ffa726;
}

/* 主要内容 */
.disclaimer-main {
  flex: 1;
  min-width: 0;
}

.disclaimer-title {
  font-weight: 500;
  margin-bottom: 8rpx;
  color: #333;
}

.disclaimer.dark .disclaimer-title {
  color: #fff;
}

.disclaimer-text {
  color: #666;
  word-wrap: break-word;
  word-break: break-all;
}

.disclaimer.dark .disclaimer-text {
  color: #ccc;
}

.disclaimer-link {
  color: #1890ff;
  margin-top: 8rpx;
  text-decoration: underline;
  cursor: pointer;
  display: inline-block;
}

.disclaimer-link:active {
  opacity: 0.7;
}

.disclaimer.dark .disclaimer-link {
  color: #40a9ff;
}

/* 关闭按钮 */
.disclaimer-close {
  flex-shrink: 0;
  margin-left: 16rpx;
  padding: 8rpx;
  margin: -8rpx -8rpx -8rpx 8rpx;
}

.close-icon {
  font-size: 32rpx;
  color: #999;
  line-height: 1;
  cursor: pointer;
}

.close-icon:active {
  opacity: 0.7;
}

.disclaimer.dark .close-icon {
  color: #bbb;
}

/* 加载状态 */
.disclaimer-loading {
  padding: 20rpx 24rpx;
  text-align: center;
  color: #999;
}

.loading-text {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .disclaimer-content {
    padding: 16rpx 20rpx;
  }
  
  .disclaimer {
    font-size: 22rpx;
  }
}

/* 动画效果 */
.disclaimer {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.disclaimer-top {
  animation: slideInTop 0.3s ease-out;
}

@keyframes slideInTop {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}