}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 32rpx 0;
}

.divider-text {
  position: relative;
  text-align: center;
  background-color: #f5f5f5;
  color: #999999;
  font-size: 24rpx;
  padding: 0 16rpx;
  margin: 32rpx 0;
}

.divider-text::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: #f0f0f0;
  z-index: -1;
