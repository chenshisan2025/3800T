/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
  box-sizing: border-box;
}

.btn:active {
  transform: scale(0.98);
}

.btn-primary {
  background-color: #2166A5;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #1A5490;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333333;
  border: 1rpx solid #e0e0e0;
}

.btn-secondary:active {
  background-color: #e0e0e0;
}

.btn-success {
  background-color: #00C851;
  color: #ffffff;
}

.btn-success:active {
  background-color: #00A041;
}

.btn-warning {
  background-color: #FFB300;
  color: #ffffff;
}

.btn-warning:active {
  background-color: #E6A000;
}

.btn-error {
  background-color: #FF4444;
  color: #ffffff;
}

.btn-error:active {
  background-color: #E63333;
}

.btn-outline {
  background-color: transparent;
  border: 1rpx solid #2166A5;
  color: #2166A5;
}

.btn-outline:active {
  background-color: #2166A5;
  color: #ffffff;
}

.btn-text {
  background-color: transparent;
  color: #2166A5;
  padding: 8rpx 16rpx;
}

.btn-text:active {
  background-color: rgba(33, 102, 165, 0.1);
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
  display: flex;
}

.btn-disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-disabled:active {
  transform: none;
}

