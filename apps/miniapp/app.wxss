/* 徽章 */
.badge {
  position: relative;
}

.badge::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #FF4444;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

.badge-count::after {
  content: attr(data-count);
  width: auto;
  height: auto;
  min-width: 16rpx;
  padding: 2rpx 6rpx;
  font-size: 20rpx;
  color: #ffffff;
  text-align: center;
  line-height: 1;
  border-radius: 8rpx;
}

/* 状态样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
  color: #666666;
  font-size: 26rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f0f0f0;
  border-top: 3rpx solid #2166A5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  color: #999999;
}

.empty-icon {
