# Database
DATABASE_URL="postgresql://username:password@localhost:5432/gulingtong?schema=public"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT Secret
JWT_SECRET="your-jwt-secret-key"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3002"

# Stock Data API (if using external data sources)
STOCK_API_KEY="your-stock-api-key"
STOCK_API_URL="https://api.example.com"

# Data Provider Configuration
# 数据提供商配置 - 支持切换不同的数据源
# 如果不配置，将使用默认的 MockProvider
DATA_PROVIDER_TYPE="mock"
DATA_PROVIDER="ExternalProvider"
DATA_PROVIDER_KEY="your-data-provider-api-key"
DATA_PROVIDER_BASE_URL="https://api.dataprovider.com"

# Data Provider Settings
# 数据提供商设置
DATA_PROVIDER_TIMEOUT=15000
DATA_PROVIDER_RETRY_COUNT=2
DATA_PROVIDER_HEALTH_CHECK_INTERVAL=30000

# AI Service (if using external AI services)
OPENAI_API_KEY="your-openai-api-key"
AI_MODEL="gpt-3.5-turbo"

# Redis (for caching, optional)
REDIS_URL="redis://localhost:6379"

# Email Service (for notifications, optional)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
HEALTH_CHECK_INTERVAL=30000