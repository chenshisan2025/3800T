# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 4 space indentation for Python files
[*.py]
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# Dart files
[*.dart]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# CSS, SCSS, and Less files
[*.{css,scss,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# Java files
[*.java]
indent_size = 4

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_size = 4

# C# files
[*.cs]
indent_size = 4

# Swift files
[*.swift]
indent_size = 4

# Kotlin files
[*.kt]
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# GraphQL files
[*.{graphql,gql}]
indent_size = 2

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_size = 2

# Terraform files
[*.tf]
indent_size = 2

# Ignore generated files
[**/generated/**]
indent_style = unset
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

# Ignore third-party code
[**/node_modules/**]
indent_style = unset
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

# Ignore build output
[**/dist/**]
indent_style = unset
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset